{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": ["node_modules/**"]
	},
	"javascript": {
		"globals": ["cy", "describe", "beforeEach", "it", "Cypress"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"all": true
			},
			"performance": {
				"all": true
			},
			"complexity": {
				"all": true
			}
		}
	}
}
